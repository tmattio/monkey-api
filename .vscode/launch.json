    "version": "0.2.0",
    "configurations": [
        {
            "type": "mix_task",
            "name": "Start Phoenix",
            "request": "launch",
            "task": "phx.server",
            "projectDir": "${workspaceRoot}",
            "excludeModules": [
                "Bcrypt.Base"
            ]
        },
        {
            "type": "mix_task",
            "name": "Run Tests",
            "request": "launch",
            "task": "test",
            "taskArgs": [
                "--trace"
            ],
            "startApps": true,
            "projectDir": "${workspaceRoot}",
            "requireFiles": [
                "test/**/test_helper.exs",
                "test/**/*_test.exs"
            ],
            "excludeModules": [
                "Bcrypt.Base"
            ]
        }
    ]
}